#include <stdio.h>
#include "pico/stdlib.h"
#include "hardware/gpio.h"

#define LED_VERMELHO 13 
#define LED_AZUL 12
#define LED_VERDE 11

stdio_init_all();

    gpio_init (LED_VERMELHO);
    gpio_init (LED_AZUL);
    gpio_init (LED_VERDE);
    gpio_set_dir (LED_VERMELHO, GPIO_OUT);



// função onde o led vermelho acende e os demais (AZUL e VERDE) desligão
void TODOSDESLIGADOS (void){
    gpio_put(LED_VERDE, 0);  // desligam o led verde
    gpio_put(LED_AZUL, 0); // desligam o led azul 
    gpio_put(LED_VERMELHO, 1); //acende o led vermelho
}

// função onde o led vermelho acende 
void LIGALEDVERMELHO (void) {
    gpio_put(LED_VERMELHO, 1); // Acende o led vermelho 
    gpio_put(LED_VERMELHO, 0); // Desligam led vermelho 
    
}
